= form_for [@server, @task, @server_task_status] do |f|

  %div{ "data-role" => "fieldcontain" }
    = f.label :status_id
    = select(:server_task_status, :status_id, ServerTaskStatus::STATUSES)

  %div{ "data-role" => "fieldcontain" }
    = f.label :remarks
    = f.text_area :remarks, :input_html => { :rows => 4 }

  = f.submit