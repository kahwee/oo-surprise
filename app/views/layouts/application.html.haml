!!!
%html

  %head
    %title
      = @page_title or 'Experiment'
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = javascript_include_tag 'jquery.mobile-1.0a3pre.min'
    = csrf_meta_tag
    = yield(:head)

  %body
    #container{"data-role" => "page", "data-theme" => "b", "role" => "main"}
      #header{"data-role" => "header"}
        %h1= @page_title or 'Experiment'
      - flash.each do |name, message|
        = content_tag :div, message, :id => "flash_#{name}"
      #content{"data-role" => "content", "role" => "main"}
        = yield
