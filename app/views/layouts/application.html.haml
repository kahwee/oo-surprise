!!!
%html

  %head
    %title
      = @page_title or 'Experiment'
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    /= stylesheet_link_tag :all
    = stylesheet_link_tag 'jquery.mobile-1.0a3pre.min'
    = javascript_include_tag :defaults
    = javascript_include_tag 'jquery.mobile-1.0a3pre.min'
    = csrf_meta_tag
    = yield(:head)

  %body
    #container{"data-role" => "page", "data-theme" => "a", "role" => "main"}
      #header{"data-role" => "header"}
        - if @header_button_left.present?
          = link_to @header_button_left[:name], @header_button_left[:url], { "data-icon" => @header_button_left[:icon] }
        %h1= @page_title or 'Experiment'
        - if @header_button_right.present?
          = link_to @header_button_right[:name], @header_button_right[:url], { "data-icon" => @header_button_right[:icon] }
      - flash.each do |name, message|
        = content_tag :div, message, :id => "flash_#{name}"
      #content{"data-role" => "content"}
        = yield
      #footer{"data-role" => "footer"}
        %p
